<nav>
    <div class='nav-headings'>
        <h2 class='heading'>URL Shortner</h2>
    </div>
    <div class='nav-menu'>
        <% if user_signed_in? %>
            <p> <%= current_user.email %> </p>
            <% unless current_page?(user_urls_path) %>
                <%= link_to 'My URLs', user_urls_path %>
            <% end %>
            <%= button_to "Logout", destroy_user_session_path,  method: :delete %>
        <% else %>
            <%= button_to "Login", new_user_session_path %>
        <% end %>
    </div>
</nav>

<style>
    nav {
        display: flex;
        flex-direction: row;
        justify-content: start;
        align-items: center;
        padding: 10px;
        margin-bottom: 20px;
    
        & .nav-headings{
            margin-right: auto;

            & .heading {
                font-size: 40px;
            }
        }

        & .nav-menu {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            align-items: center;

            & p, & a {
                margin-right: 20px;
            }
        }

        @media (max-width: 768px) {
            flex-direction: column;

            & .nav-headings{
                margin: 10px;     
        }
        }
    }
</style>